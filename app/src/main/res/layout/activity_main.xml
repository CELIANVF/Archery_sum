<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".MainActivity">

    <!-- Mode de saisie -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mode : "
            android:textSize="16sp"
            android:layout_marginEnd="8dp" />

        <androidx.appcompat.widget.SwitchCompat
            android:id="@+id/switchMode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Comptage"
            android:textOff="Comptage"
            android:textOn="Score"
            android:layout_marginEnd="16dp" />

        <TextView
            android:id="@+id/textViewModeInfo"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Comptez vos flèches"
            android:textSize="12sp"
            android:textStyle="italic" />

    </LinearLayout>

    <!-- Interface mode comptage -->
    <LinearLayout
        android:id="@+id/layoutCountingMode"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Entrez le nombre de flèches :"
            android:textSize="18sp"
            android:layout_marginBottom="8dp" />

        <EditText
            android:id="@+id/editTextNumber"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:hint="Nombre de flèches"
            android:layout_marginBottom="16dp" />

    </LinearLayout>

    <!-- Interface mode score -->
    <LinearLayout
        android:id="@+id/layoutScoringMode"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Entrez les scores des flèches (0-10) :"
            android:textSize="18sp"
            android:layout_marginBottom="8dp" />

        <EditText
            android:id="@+id/editTextScores"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:hint="Ex: 9,8,10,7,6"
            android:layout_marginBottom="8dp" />

        <TextView
            android:id="@+id/textViewScorePreview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="14sp"
            android:textColor="#666666"
            android:layout_marginBottom="16dp" />

    </LinearLayout>

    <Button
        android:id="@+id/buttonAdd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Ajouter"
        android:layout_marginBottom="8dp" />

    <Button
        android:id="@+id/buttonUndo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Annuler le dernier ajout"
        android:enabled="false"
        android:layout_marginBottom="8dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginBottom="24dp">

        <Button
            android:id="@+id/buttonViewStats"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Voir statistiques"
            android:layout_marginBottom="4dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/buttonExportCsv"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Exporter CSV"
                android:layout_marginEnd="4dp" />

            <Button
                android:id="@+id/buttonImportCsv"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Importer CSV"
                android:layout_marginStart="4dp" />

        </LinearLayout>

        <Button
            android:id="@+id/buttonObjectives"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Gérer les objectifs"
            android:layout_marginTop="4dp" />

    </LinearLayout>

    <!-- Affichage des informations -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginBottom="16dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Aujourd'hui :"
            android:textSize="18sp"
            android:layout_marginBottom="8dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Flèches :"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/textViewSum"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textSize="24sp"
                    android:textStyle="bold" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/layoutScoreInfo"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:visibility="gone">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Score moyen :"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/textViewAverageScore"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="0.0"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:textColor="#4CAF50" />

            </LinearLayout>

        </LinearLayout>

        <!-- Objectif du jour -->
        <LinearLayout
            android:id="@+id/layoutObjective"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="8dp"
            android:padding="12dp"
            android:background="#E3F2FD"
            android:visibility="gone">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="4dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Objectif global :"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/textViewObjectiveProgress"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0/50"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#1976D2" />

            </LinearLayout>

            <TextView
                android:id="@+id/textViewDailyGoal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Il vous faut 10 flèches aujourd'hui pour rester dans les temps"
                android:textSize="14sp"
                android:textStyle="italic"
                android:textColor="#1565C0" />

        </LinearLayout>

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Informations du dernier reset :"
        android:textSize="18sp"
        android:layout_marginBottom="8dp" />

    <TextView
        android:id="@+id/textViewLastSum"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Somme précédente : 0"
        android:textSize="16sp"
        android:layout_marginBottom="8dp" />

    <TextView
        android:id="@+id/textViewDuration"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Durée : 0 secondes"
        android:textSize="16sp"
        android:layout_marginBottom="16dp" />

    <ScrollView
        android:id="@+id/historyScrollView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:id="@+id/historyContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" />

    </ScrollView>

</LinearLayout>
